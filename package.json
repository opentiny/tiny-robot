{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -F docs dev",
    "build": "pnpm -F docs build",
    "build:lib": "pnpm -F @opentiny/tiny-robot build",
    "dev:adapter": "pnpm -F @opentiny/tiny-robot-ai-adapter dev",
    "build:adapter": "pnpm -F @opentiny/tiny-robot-ai-adapter build",
    "dev:ai-mocker": "pnpm --filter ai-mocker dev",
    "build:svgs": "pnpm -F @opentiny/tiny-robot-svgs build",
    "dev:demo": "npm run build:svgs && concurrently 'pnpm dev:ai-mocker' 'pnpm:dev:adapter' 'pnpm:serve:frontend'",
    "serve:frontend": "pnpm --filter tiny-robot-demo dev",
    "format": "prettier --write --list-different \"packages/**/*.{ts,mts,tsx,vue}\"",
    "type-check": "pnpm -F @opentiny/tiny-robot type-check",
    "lint": "eslint . --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "concurrently": "^8.2.0",
    "eslint": "^9.23.0",
    "eslint-plugin-vue": "^10.0.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lerna": "^7.2.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "typescript": "^5.2.2"
  }
}
